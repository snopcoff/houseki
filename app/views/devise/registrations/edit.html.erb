<div class="center">
  <h1  class="h-tt">Edit Profile</h1>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal", method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :name, class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        
        <div class="form-group">
          <%= f.label :gender, class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.label :gender, "Male", value: "true", class: "radio-inline" %>
            <%= f.radio_button :gender, true, checked: true %>
            <%= f.label :gender, "Female", value: "false", class: "radio-inline" %>
            <%= f.radio_button :gender, false %>
          </div>
        </div>
        
        <div class="form-group">
          <%= f.label :address, class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>
        
        <div class="form-group">
          <%= f.label 'Avatar Upload', class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.file_field :avatar %>
            <%= f.hidden_field :avatar_cache %>
          </div>
        </div>
        
        <div class="form-group">
          <%= f.label :hobbies, class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.text_area :hobbies, class: "form-control", placeholder: "Tell us something about your hobbies" %>
          </div>
        </div>
      
      <% if @user.provider.nil? && @user.uid.nil? %>
        <div class="form-group">
          <%= f.label :password, class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Leave blank if you don't want to change it" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :password_confirmation, class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label "Current password*", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Current password is required to apply changes" %>
          </div>
        </div>
      <% end %>
        <div class="actions form-group">
          <div class="col-md-4 col-md-offset-4">
            <%= f.submit "Update Profile", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
      </div>
  </div>
</div>